tx_gridelements {

	setup {
		# ID
		1 {
			icon = EXT:eaw_t3115/Resources/Public/Icons/icon_2col.png

			title = 2-spaltig
			description = Ein zweispaltiges Inhaltselement

			# Konfiguration die normal im Datensatz stehen würde
			config {
				colCount = 2
				rowCount = 1
				rows {
					1 {
						columns {
							1 {
								name = Linke Spalte
								colPos = 211
							}
							2 {
								name = Rechte Spalte
