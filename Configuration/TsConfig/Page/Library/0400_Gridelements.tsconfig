			<T3DataStructure>
				<meta>
					<langDisable>1</langDisable>
				</meta>
				
				<ROOT type="array">
					<type>array</type>
					<el type="array">
					<columnType type="array">
							<TCEforms type="array">
							<label>Spaltenverhältnis</label>
							<config type="array">
								<type>selectSingle</type>
								<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">50:50</numIndex>
									<numIndex index="1">cols5050</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
